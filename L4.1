from tkinter import *
from tkinter.ttk import *
l4 = Tk()
l4.title("menu bar")
l4.config(background = "light blue")
#creating the menu bar
menu_bar = Menu(l4)
#adding the file menu
file = Menu(menu_bar, tearoff=0)
menu_bar.add_cascade(label="file",menu=file)
file.add_command(label="new file",command=None)
file.add_command(label="new folder",command=None)
file.add_command(label="open file",command=None)
file.add_command(label="open folder",command=None)
file.add_command(label="save",command=None)
file.add_command(label="save as",command=None)
file.add_command(label="share",command=None)
file.add_separator()
file.add_command(label="exit",command=None)
#
file1 = Menu(menu_bar, tearoff=0)
menu_bar.add_cascade(label="edit",menu=file1)
file1.add_command(label="undo",command=None)
file1.add_command(label="redo",command=None)
file1.add_command(label="cut",command=None)
file1.add_command(label="copy",command=None)
file1.add_command(label="paste",command=None)
file1.add_command(label="find",command=None)
file1.add_command(label="replace",command=None)
file1.add_separator()
file1.add_command(label="exit",command=None)
#
file2 = Menu(menu_bar, tearoff=0)
menu_bar.add_cascade(label="selection",menu=file2)
file2.add_command(label="select all",command=None)
file2.add_command(label="expand",command=None)
file2.add_command(label="shrink",command=None)
file2.add_command(label="duplicate selection",command=None)
file2.add_command(label="copy line up",command=None)
file2.add_command(label="copy line down",command=None)
file2.add_command(label="move line up",command=None)
file2.add_command(label="move line up",command=None)
file2.add_separator()
file2.add_command(label="exit",command=None)
l4.config(menu=menu_bar)
mainloop()
